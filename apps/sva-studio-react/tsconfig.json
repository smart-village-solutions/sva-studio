{
  "extends": "../../tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client", "node"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@sva/core": ["../../packages/core/src/index.ts"],
      "@sva/data": ["../../packages/data/src/index.ts"],
      "@sva/auth": ["../../packages/auth/src/index.ts"],
      "@sva/sdk": ["../../packages/sdk/src/index.ts"],
      "@sva/plugin-example": ["../../packages/plugin-example/src/index.ts"]
    }
  }
}
