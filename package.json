  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.12.2"
  },
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "nx": "nx",
    "build": "nx run-many -t build",
    "lint": "nx run-many -t lint",
    "test": "pnpm test:unit",
    "test:unit": "nx run-many -t test:unit",
    "test:coverage": "nx run-many -t test:coverage",
    "test:coverage:affected": "nx affected --target=test:coverage --base=origin/main",
    "test:integration": "nx run-many -t test:integration",
    "test:ci": "pnpm test:unit && pnpm test:coverage",
    "coverage-gate": "tsx scripts/ci/coverage-gate.ts"
  },
  "repository": {
    "type": "git",
