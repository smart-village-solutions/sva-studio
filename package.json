  "devDependencies": {
    "@nx/js": "^22.3.3",
    "autoprefixer": "10.4.20",
    "nx": "^22.3.3",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.14",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3"
  }
