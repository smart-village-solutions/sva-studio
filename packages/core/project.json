{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p packages/core/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @sva/core exec tsc -p tsconfig.lib.json --noEmit"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('unit tests not configured for @sva/core (coverage-exempt)')\""
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('coverage tests not configured for @sva/core (coverage-exempt)')\""
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('integration tests not configured for @sva/core (coverage-exempt)')\""
      }
    }
  },
  "tags": ["scope:core", "type:lib"]
}
