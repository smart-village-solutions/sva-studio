{
  "name": "monitoring-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/monitoring-client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p packages/monitoring-client/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('lint not configured for @sva/monitoring-client')\""
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/monitoring-client && vitest run tests --reporter=verbose"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd packages/monitoring-client && vitest run tests --coverage --coverage.reporter=text-summary --coverage.reporter=json-summary --coverage.reporter=lcov --reporter=verbose"
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('no integration tests configured for @sva/monitoring-client')\""
      }
    }
  },
  "tags": ["scope:monitoring", "type:lib"]
}
