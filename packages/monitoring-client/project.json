{
  "name": "monitoring-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/monitoring-client/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p packages/monitoring-client/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @sva/monitoring-client exec tsc -p tsconfig.lib.json --noEmit"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @sva/monitoring-client exec vitest run tests --reporter=verbose --config vitest.config.ts --passWithNoTests"
      }
    }
  },
  "tags": ["scope:monitoring", "type:lib"]
}
