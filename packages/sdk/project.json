{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p packages/sdk/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('lint not configured for @sva/sdk')\""
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec vitest run tests --reporter=verbose --passWithNoTests",
        "cwd": "packages/sdk"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec vitest run tests --coverage --coverage.reporter=text-summary --coverage.reporter=json-summary --coverage.reporter=lcov --reporter=verbose --passWithNoTests",
        "cwd": "packages/sdk"
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('no integration tests configured for @sva/sdk')\""
      }
    }
  },
  "tags": ["scope:sdk", "type:lib"]
}
