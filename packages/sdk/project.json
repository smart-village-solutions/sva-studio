{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsc -p packages/sdk/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @sva/sdk exec tsc -p tsconfig.lib.json --noEmit"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @sva/sdk exec vitest run tests --reporter=verbose --config vitest.config.ts --passWithNoTests"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @sva/sdk exec vitest run tests --coverage --reporter=verbose --config vitest.config.ts --passWithNoTests"
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node -e \"console.log('no integration tests configured for @sva/sdk')\""
      }
    }
  },
  "tags": ["scope:sdk", "type:lib"]
}
